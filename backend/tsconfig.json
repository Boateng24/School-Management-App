       "lib": [
          "es5",
          "es6",
          "DOM"
          
       ],
       "target": "es6",
       "rootDir": "./",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "esModuleInterop": true,
